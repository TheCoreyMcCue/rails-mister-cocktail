<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1486428263684-28ec9e4f2584?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2734&q=80);">
  <div class="container">
    <h1>Behind The Bar</h1>
    <p>View and Create cocktail recipes from other mixologists like you!</p>
    <%= link_to 'Create a New Cocktail', new_cocktail_path, class: "btn btn-flat", id: "create" %>
  </div>
</div>

<%#= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>




<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <h3 class="text-center">All Cocktails</h3>
      <ul>
        <% @cocktails.each do |cocktail| %>
        <li>
          <% if cocktail.photo.attached? %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
              <div class="card-category py-3">
                <span class="cocktail-name"><%= cocktail.name%></span>
              </div>
              <div class="d-flex justify-content-end">
                <%= link_to 'Show More', cocktail, class: "btn btn-primary" %>
                <%= link_to 'Delete', cocktail, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
              </div>
            </div>
            <% else  %>
              <div class="card" style="background-image: url('https://images.unsplash.com/photo-1536935338788-846bb9981813?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=2786&q=80')">
                <div class="card-category py-3">
                  <span class="cocktail-name"><%= cocktail.name%></span>
                </div>
                <div class="d-flex justify-content-end">
                  <%= link_to 'Show More', cocktail, class: "btn btn-primary" %>
                  <%= link_to 'Delete', cocktail, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
</div>


